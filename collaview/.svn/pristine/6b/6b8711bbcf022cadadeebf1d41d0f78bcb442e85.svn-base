@charset "UTF-8";


.container {
	padding: 60px 16px 76px;
}
 
.wrap {
	margin-bottom: 16px;
}

.createBtn{
	float: right;
	border-radius: 5px;
	background-color: #333;
	color: #fff;
	padding: 9px 17px;
	font-size: 12px;
}

.chart-list {width: 100%;}

.chart-item{
	position: relative;
	display: flex;
	width: 100%;
	padding: 16px;
	border-radius: 10px;
	box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.2);
}

.chart-item_left{
	display: flex;
	align-items: center;
	margin-right: 10px;
}

.avatar {
	overflow: hidden;
	width: 88px;
	height: 88px;
	border-radius: 50%;
	background: var(--noneChannelImage) no-repeat center/cover;
}

.chart-item_right {width: 100%;}

.chart-item_channel{
	display: flex;
	margin-bottom: 3px;
}

.channel-name{
	overflow: hidden;
    display: -webkit-box;
    width: fit-content;
    text-overflow: ellipsis; word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
	margin-right: 3px;
	font-size: 0.875rem;
	font-weight: bold;
	max-width: calc(100% - 40px);
}

.avatar-small{
	overflow: hidden;
	width: 14px;
	height: 14px;
	align-self: center;
	border-radius: 40px;
	background: var(--noneChannelImage) no-repeat center/cover;
}

.chart-item-key{
	color: #999;
	font-size: 0.8125rem;
	font-weight: 400;
}


.bottom-wrap{
	color: #999;
	line-height: 15px;
	letter-spacing: -0.05em;
	font-size: 0.75rem;
	font-weight: 400;
}

.chart-item__members{
	display: -webkit-box;
	overflow: hidden;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	width: 100%;
	margin-bottom: 10px;
}

.chart-item__favorites{
	display: flex;
	align-items: center;
	margin: 8px 0;
}

.chart-item__favorites .material-symbols-outlined{
	color: #888;
	vertical-align: middle;
	font-size: 0.875rem;
	font-weight: 400;
	font-size: 16px;
}

.chart-item__favorites .bookmark{
	color: #888;
	vertical-align: middle;
	font-size: 0.875rem;
	font-weight: 400;
}

.leave{
	color: #999;
	font-size: 22px;
	position: absolute;
	right: 10px;
	top: 10px;
}

.leave:last-child {
	margin-left: auto;
}

@charset "UTF-8";

body{
	font-family: "Noto Sans KR-Regular", Helvetica;
	font-weight: 500;
}

.wrap {
	margin-bottom: 1rem;
}

.supportModal {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 1000;
}

.support-overlay {
	position: fixed;
	top:0; left:0;
	width:100%; height:100%;
	background:rgba(0,0,0,0.4);
	z-index:1001;
}

.modal-title{
	font-size: 14px;
	margin-bottom: 15px;
	font-weight: bold;
}

.modal-support-content{
	box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
	width: calc(100% - 32px); height: fit-content;
	margin-top: 50%;
	padding: 20px;
	background: #fff;
	position: relative;
	z-index: 1002;
	border-radius: 8px;
	justify-self: center;
}

.support-options {
	align-items: center;
	width: 100%;
	height: 40px;
	padding: 10px 8px;
	border: 1px solid;
	border: 1px solid;
	border-color: #0000001a;
	border-color: #0000001a;
	border-radius: 5px;
	border-radius: 5px;
}


.support-email {
	display: flex;
	align-items: center;
	margin-bottom: 8px;
}

.support-email label {
	font-size: 12px;
	cursor: pointer;
}

.support-email input[type="checkbox"] {
	margin-right: 6px;
}

.emailNotify {
	align-items: center;
	width: 1rem;
	height: 1rem;
	margin-right: 0px;
	margin-left: 0px;
	border-radius: 2px;
}

.emailNotify:checked {
	accent-color: #555555;
}

.support-comment {
	color: #555555;
	width: 100%;
	height: 180px;
	letter-spacing: -0.60px;
	padding: 8px;
	border: 1px solid #ccc;
	border-radius: 4px;
	box-sizing: border-box;
	font-family: "Noto Sans KR";
	font-weight: 400;
	font-size: 0.75rem;
	line-height: 20px;
}

.modal-buttons {
	display: flex;
	justify-content: space-between;
	gap: 16px;
}

.supportModal .btn {
	border-radius: 5px;
	cursor: pointer;
	font-size: 14px;
	line-height: 22px; letter-spacing: 0.05em;
	width: 100%;
}

.btn.save {
	background-color: var(--point);
	color: white;
}

.btn.cancel {
	background-color: #333;
	color: white;
}
@charset "UTF-8";

.container {padding: 67px 0 76px;}
.visual {overflow: hidden;
    width: calc(100% - 32px); height: 150px;
    margin: 0 16px 16px;
    border-radius: 5px;
    position: relative;
}
.visual_txt {
    position: absolute; left: 16px; top: 16px; z-index: 1;
}
.visual_txt span {display: block; margin-bottom: 5px;
    font-weight: 500; color: #fff; line-height: 1.5em;
}
.visual_txt p {font-weight: 700; font-size: 1.1rem; color: #fff; line-height: 1.5em;}
.visual_img {display: block; width: 100%; height: 100%;
    background-color: #999;
    position: relative;
}
.visual_img::before {content: "";
    display: block; width: 55%; height: 100%;
    background: linear-gradient(90deg, rgba(0,0,0,0.8) 0%, rgba(36,2,2,0.6) 60%, rgba(47,3,3,0) 100%);
    position: absolute; left: 0; top: 0;
}
/* visual - E */

.contentsBox {margin-bottom: 16px;}
.contentsBox:last-child {margin-bottom: 0;}

.videoList {display: flex; justify-content: space-between; flex-wrap: wrap;
    margin: 0 16px;
}
.videoBox {width: calc(50% - 8px); margin-bottom: 16px;}
.videoBox:nth-child(7), .videoBox:nth-child(8) {margin-bottom: 0;}
.videoBox_img {width: 100%; height: 150px;
    margin-bottom: 6px;
    border-radius: 5px;
    background-color: #ddd;
}
.videoBox_img img, .videoBox_img video {width: 100%; height: 100%;}
.videoBox_txt {padding: 0 3px;}
.videoBox_tit {overflow: hidden;
    width: 100%; height: 20px;
    margin-bottom: 5px;
    font-weight: 700; line-height: 20px; text-overflow: ellipsis; white-space: nowrap; word-break: break-all;
}
.videoBox_ch {display: flex; align-items: center;
    width: 100%;
}
.videoBox_ch_img {overflow: hidden;
	display: block;
    width: 32px; margin-top: 4px; margin-right: 6px;
    border-radius: 50%;
    background-color: #ddd;
}
.videoBox_ch_img img {width: 100%; height: 100%;}
.videoBox_ch_txt {width: calc(100% - 38px);}
.videoBox_ch_tit {display: flex; align-items: center;
    width: 100%;
}
.videoBox_ch_name {overflow: hidden;
    width: fit-content; max-width: calc(100% - 18px);
    font-weight: 500; font-size: 0.9rem; color: #555; text-overflow: ellipsis; white-space: nowrap; word-break: break-all;
}
.videoBox_ch_level {flex-shrink: 0;
    display: inline-block;
    width: 14px;
    margin-left: 4px;
    text-indent: -9999px;
    background-color: #ddd;
}
.videoBox_ch_level.rank2 {background-color: #ffd000;}
.videoBox_ch_level.rank1 {background-color: #b5bbc2;}
.videoBox_ch_level.rank0 {background-color: #725a4a;}
.videoBox_ch_bookmark {padding-left: 20px;
    font-size: 0.8rem; color: #777;
    position: relative;
}
.videoBox_ch_bookmark >span {font-size: 20px; color: #999;
    position: absolute; left: 0; top: 1px;
}
/* videoList - E */

.bbsList {height: fit-content;
    padding: 16px;
}
.bbsBox {flex-shrink: 0;
    box-shadow: 0 1px 5px 0 rgba(0,0,0,0.25);
    width: 100%; min-height: 180px;
    margin-right: 20px;
    border-radius: 5px;
    padding: 16px;
}
.bbsBox_tit {overflow: hidden;
    display: block;
    width: 100%;
    margin-bottom: 8px;
    font-weight: 700; text-overflow: ellipsis; white-space: nowrap; word-break: break-all;
}
.bbsBox_content {display: flex; justify-content: space-between; flex-direction: column;
    height: 120px;
}
.bbsBox_txt {overflow: hidden;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    margin-bottom: 16px;
    font-size: 0.9rem; text-overflow: ellipsis; word-break: break-all;
}
.bbsBox_info {display: flex; align-items: center;}
.bbsBox_info >p {
    color: #777;
    position: relative;
}
.bbsBox_chat {margin-right: 8px;
    padding-left: 20px;
}
.bbsBox_chat >span {
    font-size: 18px; color: #888;
    position: absolute; left: 0; top: 2px;
}
.bbsBox_view {padding-left: 20px;}
.bbsBox_view >span {font-size: 18px; color: #888;
    position: absolute; left: 0; top: 1px;
}
/* bbsList - E */


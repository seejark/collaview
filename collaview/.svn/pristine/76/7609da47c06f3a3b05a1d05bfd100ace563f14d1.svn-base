@charset "UTF-8";

body {
	font-family: "Noto Sans KR";
	font-weight: 500;
}

.container {
	padding: 88px 16px 76px;
}


.comment {
	width: 100%;
	height: 189px;
	padding: 8px;
	border: 1px solid #ccc;
	color: #555555;
	font-family: "Noto Sans KR";
	font-size: 0.75rem;
	font-weight: 400;
	line-height: 20px;
	letter-spacing: -0.60px;
	border-radius: 4px;
	box-sizing: border-box;
}

.wrap {
	margin-bottom: 1rem;
}

.container .title {
	margin-bottom: 8px;
	color: #333333;
	font-size: 0.875rem;
	line-height: 20px;
	letter-spacing: -0.70px;
	white-space: nowrap;
}

.file-group {
	display: flex;
	gap: 8px;
	justify-content: space-between;
	margin-bottom: 8px;
}

.container .name-wrapper {
	display: flex;
	width: 88%;
	height: 40px;
	border: 1px solid;
	border-color: #dddddd;
	border-radius: 5px;
}

.clip-icon {
	align-content: center;
	width: 40px;
	height: 40px;
	padding: 8px;
	color: #ffffff;
	text-align: center;
	background-color: #333333;
	border-radius: 5px;
}

.video-name {
	overflow: hidden;
	align-content: center;
	justify-content: center;
	padding: 10px 8px;
	color: #555555;
	font-size: 0.875rem;
	font-weight: 400;
	line-height: 20px;
	text-align: center;
	letter-spacing: -0.70px;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.button-group {
	display: flex;
	gap: 15px;
	justify-content: space-between;
}

.button-title {
	color: #ffffff;
	font-size: 1rem;
	line-height: 22px;
	letter-spacing: -0.80px;
	white-space: nowrap;
}

.container .upload-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	width: 50%;
	height: 45px;
	padding: 10px 12px;
	background-color: #6d3289;
	border-radius: 5px;
}

.container .cancel-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	width: 50%;
	height: 45px;
	padding: 10px 12px;
	background-color: #333333;
	border-radius: 5px;
}

.swiper-container {
	width: 100%;
	overflow: hidden;
}

.video-list .video-item {
	background: #8e8e8e;
	border-radius: 5px;
	height: 87px;
	width: 87px;
}

.swiper-slide.large {
	width: 120px;
}

.swiper-slide.small {
	width: 50px;
}

.emsembleTitle{
  color: #888;
  font-size: 12px;
}

.emsembleContent{
  color: #555;
  font-size: 12px;
  line-height: 20px;
}

.keyword-wrap {
	display: flex;
	gap: 8px;
}

.keyword {
	padding: 12px 15px;
	border: 1px solid #ddd;
	color: #555;
	font-size: 14px;
	border-radius: 5px;
}

#container .noMargin {
	margin: 0;
}
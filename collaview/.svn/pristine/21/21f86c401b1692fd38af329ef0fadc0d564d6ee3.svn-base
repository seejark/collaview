@charset "UTF-8";

.container {
    max-width: 640px;
    margin: 0 auto;
    padding: 70px 16px 80px;
    box-sizing: border-box;
    width: 100%;
}

.category {
    display: inline-block;
    margin-bottom: 10px;
    border-radius: 3px;
    padding: 0 6px;
    font-size: 0.9rem;
	line-height: 30px;
    background-color: #e4e4e4;
}

.post-title {
    font-size: 16px;
    margin-bottom: 8px;
    font-weight: normal;
}

.post-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 1px solid #eee;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 8px;
}

.user-avatar {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: var(--noneProfileImage) no-repeat center/cover;
}
.user-avatar >img {width: 100%; height: 100%;}

.user {
    font-size: 0.9rem;
}

.post-time {
    font-size: 12px;
    color: #666;
    display: flex;
    align-items: center;
}

.post-time .material-symbols-outlined {
    font-size: 16px;
    margin-right: 4px;
} 

.view-count {
    color: #666;
    display: flex;
    font-size: 0.8rem;
    line-height: 26px;
    padding-top: 2px;
    align-items: center;
}

.view-count .material-symbols-outlined {
    font-size: 16px;
    margin-right: 4px;
}

.follow-btn {
    padding: 4px 8px;
    border-radius: 4px;
    background: #d9d9d9;
    border: none;
    font-size: 12px;
    display: flex;
    align-items: center;
    cursor: pointer;
}

.follow-btn .material-symbols-outlined {
    font-size: 18px;
    margin-right: 4px;
}

.follow-btn1 {
    padding: 4px 8px;
    border-radius: 4px;
    background: #d9d9d9;
    border: none;
    font-size: 12px;
    display: flex;
    align-items: center;
    cursor: pointer;
}

.follow-btn1 .material-symbols-outlined {
    font-size: 14px;
    margin-right: 4px;
}

.post-content {
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 16px;
}

.post-date {margin-bottom: 8px;
	border-radius: 3px;
	padding: 8px;
	background-color: #ddd;
    font-weight: 500;
}

.post-image {
    width: 100%;
    margin: 16px 0;
    border-radius: 8px;
}
.post-image >img {width: 100%; height: auto;}
    
.post-actions {
    display: flex;
    gap: 8px;
    margin-bottom: 16px;
    justify-content: flex-end;
    position: relative;
}

.action-btn {
    padding: 6px 12px;
    border-radius: 5px;
    border: 1px solid #eee;
    background: #f5f5f5;
    font-size: 14px;
    color: #666;
    min-width: 60px;
    text-align: center;
    cursor: pointer;
}

.post-like-btn {
    position: absolute;
    left: 0;
    display: flex;
    align-items: center;
    gap: 4px;
    border: none;
    background: none;
    color: #666;
    font-size: 12px;
    padding: 0;
    cursor: pointer;
}

.like-btn {
    display: flex;
    align-items: center;
    gap: 4px;
    border: none;
    background: none;
    color: #666;
    font-size: 12px;
    padding: 0;
    cursor: pointer;
}
.like-btn .material-symbols-outlined {
    font-size: 14px;  /* 하트 크기 줄임 */
}

.like-count {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 14px;
    color: #666;
    margin-bottom: 16px;
}

.post-actions:last-of-type {margin-bottom: 0;}

.comment-input {
    display: flex;
    gap: 8px;
    margin-bottom: 16px;
}

.comment-input input {
    flex: 1;
    padding: 8px 12px;
    border: 1px solid #eee;
    border-radius: 4px;
    font-size: 14px;
}

.comment-input button {
    padding: 8px 16px;
    background: #333;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.comments-section {
    border: 1px solid #eee;
    border-radius: 8px;
    margin-top: 16px;
    background: white;
    overflow: hidden;
}

.comment {
    padding: 16px;
    border-bottom: 1px solid #eee;
    background-color: white;
}

.comment-box {padding: 16px;}

.comment-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.comment-header-box {display: flex; align-items: center; gap: 8px;}

.comment-status {
    font-size: 12px;
    color: #666;
}

.comment-text {
    font-size: 14px;
    margin: 8px 0;
}

.comment-actions {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;  /* 대댓글과의 간격 추가 */
}

.reply-btn1, .reply-btn2 {
    display: flex;
    align-items: center;
    gap: 4px;
    border: none;
    background: none;
    color: #666;
    font-size: 12px;
    cursor: pointer;
}


.reply {
    padding-left: 32px;
    position: relative;
    background-color: #f5f5f5; 
    margin: 0;
    border-top: 1px solid #eee;
    margin-left: -16px;
    margin-right: -16px;
    padding-right: 16px;
}

.reply .comment {
    border-bottom: none;
    background-color: transparent;
    padding-left: 0;
}

.reply::before {
    content: '';
    position: absolute;
    left: 12px;
    top: 0;
    bottom: 0;
    width: 1px;
    background: #eee;
}

.reply::after {
    content: '';
    position: absolute;
    left: 12px;
    top: 24px;
    width: 12px;
    height: 1px;
    background: #eee;
}

.reply .reply {
    margin-left: 0;
    margin-right: -16px;
    padding-left: 32px;
}

.reply .reply::before {
    left: 12px;
}

.reply .reply::after {
    left: 12px;
}

.comments-section > .comment:last-child {
    border-bottom: none;
}